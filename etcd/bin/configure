#!/bin/sh

# TODO: Read variables from command line and pass to script.
mkdir -p /etc/etcd/

if ! file exists /etc/etcd/etcd.conf
then
	template install etcd/etcd.conf \
		to /etc/etcd/etcd.conf \
		mode 0644
fi

if ! file exists /etc/init.d/etcd
then
	template install etcd/init.d \
		to /etc/init.d/etcd \
		owner root:root \
		mode 0755
fi
