#!/bin/sh

trace_filter nginx || set -o xtrace

if ! (( force_flag )) && path exists "/etc/nginx"
then
  error "/etc/nginx exists; To force re-configure use the 'force'"
fi

if path exists /etc/nginx
then
  path move \
    from /etc/nginx \
    to /etc/nginx.${timestamp}
fi

files link symbolic \
  from "${active_path}/etc/nginx" \
  to /etc/nginx
